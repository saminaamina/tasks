using System;
using System.Linq;

namespace AnonymousDownsite
{
    class Program
    {
        static void Main(string[] args)
        {
            int affectedWebsites = int.Parse(Console.ReadLine());
            int securityKey = int.Parse(Console.ReadLine());
            string [] siteName = new string [affectedWebsites];
            int [] siteVisits = new int[affectedWebsites];
            decimal[] siteCommercialPricePerVisit = new decimal[affectedWebsites];
            decimal totalLoss = 0;
            decimal siteLoss = 0;
            for (int i = 0; i < affectedWebsites; i++)
            {
                siteName[i] = Console.ReadLine();
                siteVisits[i] = int.Parse(Console.ReadLine());
                siteCommercialPricePerVisit[i] = decimal.Parse(Console.ReadLine());
                siteLoss = siteVisits * {siteCommercialPricePerVisit};
                totalLoss += siteLoss;

            }
            Console.WriteLine(string.Join(Environment.NewLine, siteName));
            Console.WriteLine($"Total Loss: {totalLoss:F20}");
           
        }
    }
}
